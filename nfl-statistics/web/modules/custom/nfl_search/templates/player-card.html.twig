{% if results %}
  <div class="card-deck">
    {% for result in results %}
      <div class="card">
        <div class="card-body">
          <h5 class="athlete-name">{{ result.displayName }}</h5>
          <p class="debut-year">{{ result.debutYear }}</p>
        </div>
        <div class="card-footer">
        </div>
      </div>
    {% endfor %}
  </div>
{% else %}
  <p>{{ 'No results found.'|t }}</p>
{% endif %}